generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Employee {
  id         Int      @id @default(autoincrement())
  name       String
  position   String
  department String
  email      String
  shifts     Shift[]
}

model Shift {
  id           Int      @id @default(autoincrement())
  employeeId   Int
  employee     Employee @relation(fields: [employeeId], references: [id])
  employeeName String   
  shiftTime    String
  date         String
  status       String   @default("scheduled")
}
